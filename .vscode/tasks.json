{
  "tasks": [
      {
          "type": "shell",
          "label": "clang++ build active file",
          "command": "/usr/bin/clang++",
          "args": [
            "-lSDL2",
            "-lSDL2_ttf",
            "-g",
            "${fileDirname}/classes/Vector2.cpp",
            "-g",
